{
  "name": "@stagg/build",
  "version": "1.0.0",
  "author": "Dan Lindsey",
  "description": "Stagg Monorepo Builder",
  "main": "index.js",
  "scripts": {
    "build": "node .",
    "build:dev": "NODE_ENV=development node .",
    "build:dev:win": "set NODE_ENV=development && node ."
  },
  "hydration": {
    "apps": {
      "api": {
        "port": 8080,
        "service": "api",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": [
          "JWT_SECRET",
          "MONGO_HOST",
          "MONGO_PORT",
          "MONGO_USER",
          "MONGO_PASS",
          "POSTGRES_HOST",
          "POSTGRES_USER",
          "POSTGRES_PASS",
          "DISCORD_TOKEN",
          "GMAIL_ADDRESS",
          "GMAIL_PASSWORD"
        ]
      },
      "web-ui": {
        "port": 8080,
        "service": "default",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": []
      }
    },
    "services": {
      "render-chart": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": []
      },
      "render-html": {
        "memory": "512MB",
        "region": "us-east1",
        "secrets": []
      },
      "scrape-scheduler": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": [
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS"
        ]
      },
      "scrape-worker-cod": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": [
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS"
        ]
      }
    }
  },
  "dependencies": {
    "js-yaml": "^3.14.0"
  }
}
