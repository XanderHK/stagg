{
  "name": "stagg-builder",
  "version": "1.0.0",
  "author": "Dan Lindsey",
  "description": "Stagg Monorepo Builder",
  "main": "index.js",
  "scripts": {
    "build": "node ."
  },
  "hydration": {
    "apps": {
      "api": {
        "port": 8080,
        "service": "api",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": [
          "JWT_SECRET",
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS"
        ]
      },
      "discord": {
        "port": 8080,
        "service": "discord",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": [
          "JWT_SECRET",
          "DISCORD_TOKEN",
          "GMAIL_ADDRESS",
          "GMAIL_PASSWORD",
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS"
        ]
      },
      "web-ui": {
        "port": 8080,
        "service": "default",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": []
      }
    },
    "services": {
      "render-chart": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": []
      },
      "render-view": {
        "memory": "512MB",
        "region": "us-east1",
        "secrets": []
      },
      "scrape-cod-cron": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": []
      },
      "scrape-cod-worker": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": [
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS"
        ]
      }
    }
  },
  "dependencies": {
    "js-yaml": "^3.14.0"
  }
}
