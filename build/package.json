{
  "name": "@stagg/build",
  "version": "1.0.0",
  "author": "Dan Lindsey",
  "description": "Stagg Monorepo Builder",
  "main": "index.js",
  "scripts": {
    "build": "node .",
    "build:dev": "NODE_ENV=development node .",
    "build:dev:win": "set NODE_ENV=development && node ."
  },
  "hydration": {
    "apps": {
      "api": {
        "port": 8080,
        "service": "api",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": [
          "JWT_SECRET",
          "GMAIL_USER",
          "GMAIL_PASS",
          "MONGO_HOST",
          "MONGO_USER",
          "MONGO_PASS",
          "PGSQL_USER",
          "PGSQL_PASS",
          "PGSQL_SOCKETPATH",
          "FAAS_ETL_COD_HOST",
          "FAAS_RENDER_HTML_HOST",
          "FAAS_RENDER_CHART_HOST",
          "DISCORD_CLIENT_TOKEN",
          "DISCORD_CHANNEL_NOTIFY_SYS"
        ]
      },
      "web-ui": {
        "port": 8080,
        "service": "default",
        "runtime": "nodejs12",
        "instance": "F1",
        "secrets": []
      }
    },
    "services": {
      "render-chart": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": []
      },
      "render-html": {
        "memory": "512MB",
        "region": "us-east1",
        "secrets": []
      },
      "etl-callofduty": {
        "memory": "128MB",
        "region": "us-east1",
        "secrets": [
          "API_HOST",
          "FAAS_ETL_COD_TTL",
          "FAAS_ETL_COD_HOST"
        ]
      }
    }
  },
  "dependencies": {
    "js-yaml": "^3.14.0"
  }
}
