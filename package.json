{
  "name": "root",
  "author": {
    "name": "Dan Lindsey"
  },
  "private": true,
  "scripts": {
    "link": "lerna link --force-local",
    "publish": "lerna run tsc && lerna publish",
    "gcp:tsc": "lerna run tsc",
    "gcp:build": "node build && lerna run build",
    "api": "cd apps/api && yarn dev",
    "discord": "cd apps/discord && yarn dev",
    "web-ui": "cd apps/web-ui && yarn dev",
    "secrets:dev": "NODE_ENV=development node build",
    "secrets:dev:win": "set NODE_ENV=development && node build"
  },
  "workspaces": [
    "build",
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@types/node": "^14.0.13",
    "lerna": "^3.22.1",
    "typescript": "^3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdlindsey/stagg.git"
  }
}
